{
  "coc.preferences.formatOnSaveFiletypes": ["python", "nix", "lua", "javascript", "javascriptreact"],
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {
        "experimentalFeatures": {
          "prefillRequiredFields": true
        }
      },
      "settings": {}
    }
  },
  "python": {
    "formatting": {
      "provider": "black"
    }
  },
  "diagnostic-languageserver": {
    "formatFiletypes": {
      "nix": "alejandra"
    },
    "formatters": {
      "alejandra": {
        "command": "alejandra",
        "rootPatterns": [
          ".git"
        ],
        "formatStdin": true
      }
    }
  }
}
